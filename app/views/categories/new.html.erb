<h1>Nouvelle categorie</h1>
<%= form_for @category do |f| %>
<div class="form-group">

<%= f.text_field :name,placeholder: 'Nom de la categorie', class: 'form-control' %>
</div>
<div class="form-group">

<%= f.text_area :slug,placeholder: 'URL', class: 'form-control'  %>
</div>
<div class="form-group">
<button type="submit" class="btn btn-primary">Creer la categorie </button>
</div>

<% end %>