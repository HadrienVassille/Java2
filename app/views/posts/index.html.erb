<h1>Articles du blog</h1>

<% @posts.each do |post| %> 
<h2><%=post.title%></h2>
<p><%=post.content%></p>
<% if post.category %>
<p>Categorie : <%=post.category.name %></p>
<% end %>
<p>
Tags : 
<% post.tags.each do |tag| %>
<%= tag.name %>
<% end %>
</p>

<p>
<a href="<%= post_path(post.id)%>" class="btn btn-primary">Lire la suite</a>
<a href="<%= edit_post_path(post.id)%>" class="btn btn-default">Editer</a>
<a href="<%= post_path(post.id)%>" class="btn btn-danger" data-confirm= "Etes-vous sÃ»r ?" data-method= "DELETE">Supprimer</a>

</p>
<hr />



<%end%>
<p>
<a href="<%= new_post_path %>" class="btn btn-success">Ajouter un article</a>
</p>
